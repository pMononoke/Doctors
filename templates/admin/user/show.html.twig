{% extends 'admin/layout/admin-base.html.twig' %}

{% block title %}
    {{ parent() }} | {{ 'user.show_title'|trans }}
{% endblock %}

{% block body %}
    <div class="container pt-3 border">
        <div class="row">
            <div class="container">
                <h1>{{ 'user.show_header'|trans }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ 'user.account_status'|trans }}</th>
                        <td>{{ user.isActiveAccount ? 'user.account_status.enabled'|trans : 'user.account_status.disabled'|trans }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'user.id'|trans }}</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'user.email'|trans }}</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'user.roles'|trans }}</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'user.firstname'|trans }}</th>
                        <td>{{ user.firstName ? user.firstName : '' }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'user.lastname'|trans }}</th>
                        <td>{{ user.lastName ? user.lastName : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <div class="d-flex flex-column">
                    <div class="p-2">
                        <a href="{{ path('admin_user_index') }}" class="btn btn-info btn-block" role="button">{{ 'common.actions.back_to_list'|trans }}</a>
                    </div>
                    <div class="p-2">
                        {% if user.isActiveAccount %}
                            {{ include('admin/user/_disable_account_form.html.twig') }}
                        {% else %}
                            {{ include('admin/user/_enable_account_form.html.twig') }}
                        {% endif %}
                    </div>
                    <div class="p-2">
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-block" role="button">{{ 'common.actions.edit'|trans }}</a>
                    </div>
                    <div class="p-2">
                        {{ include('admin/user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
