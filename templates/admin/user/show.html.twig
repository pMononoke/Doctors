{% extends 'admin/layout/admin-base.html.twig' %}

{% block title %}
    {{ parent() }} | {{ 'user.show_title'|trans }}
{% endblock %}

{% block body %}
    <div class="container-lg">
        <h1>{{ 'user.show_header'|trans }}</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>{{ 'user.account_status'|trans }}</th>
                <td>{{ user.isActiveAccount ? 'user.account_status.enabled'|trans : 'user.account_status.disabled'|trans }}</td>
            </tr>
                <tr>
                    <th>{{ 'user.id'|trans }}</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'user.email'|trans }}</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>{{ 'user.roles'|trans }}</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>{{ 'user.firstname'|trans }}</th>
                    <td>{{ user.profile ? user.profile.firstName : '' }}</td>
                </tr>
                <tr>
                    <th>{{ 'user.lastname'|trans }}</th>
                    <td>{{ user.profile ? user.profile.lastName : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('admin_user_index') }}" class="btn btn-info" role="button">{{ 'common.actions.back_to_list'|trans }}</a>

        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary" role="button">{{ 'common.actions.edit'|trans }}</a>

        {{ include('admin/user/_delete_form.html.twig') }}

        {% if user.isActiveAccount %}
            {{ include('admin/user/_disable_account_form.html.twig') }}
        {% else %}
            {{ include('admin/user/_enable_account_form.html.twig') }}
        {% endif %}


    </div>
{% endblock %}
