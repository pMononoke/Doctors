{% extends 'admin/layout/admin-base.html.twig' %}

{% block title %}
    {{ parent() }} | {{ 'patient.edit_title'|trans }}
{% endblock %}

{% block body %}
    <div class="container pt-3 border">
        <div class="row">
            <div class="container">
                <h1>{{ 'patient.edit_header'|trans }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ include('admin/patient/_form.html.twig', {'button_label': 'Update'}) }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="d-inline-flex pt-3 ">
                    <div class="p-2">
                        <a href="{{ path('admin_patient_index') }}" class="btn btn-info" role="button">{{ 'common.actions.back_to_list'|trans }}</a>
                    </div>
                    <div class="p-2">
                        {{ include('admin/patient/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
