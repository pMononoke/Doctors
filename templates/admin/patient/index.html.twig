{% extends 'admin/layout/admin-base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>

                <th>Firstname</th>
                <th>Middlename</th>
                <th>Lastname</th>
                <th>Gender</th>
                <th>Dob</th>
                {#<th>Resident</th>#}
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.firstname }}</td>
                <td>{{ patient.middlename }}</td>
                <td>{{ patient.lastname }}</td>
                <td>{{ patient.gender }}</td>
                <td>{{ patient.dateOfBirth ? patient.dateOfBirth|date('Y-m-d') : '' }}</td>
                {#<td>{{ patient.resident ? 'Yes' : 'No' }}</td>#}
                <td>{{ patient.createdAt ? patient.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ patient.updatedAt ? patient.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('admin_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="27">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_patient_new') }}">Create new</a>
{% endblock %}
