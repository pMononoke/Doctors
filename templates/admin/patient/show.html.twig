{% extends 'admin/layout/admin-base.html.twig' %}

{% block title %}
    {{ parent() }} | {{ 'patient.show_title'|trans }}
{% endblock %}

{% block body %}
<div class="container pt-3 border">
    <div class="row">
        <div class="container">
            <h1>{{ 'patient.show_header'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <table class="table">
                <tbody>
                <tr>
                    <th>{{ 'patient.id'|trans }}</th>
                    <td>{{ patient.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'patient.firstname'|trans }}</th>
                    <td>{{ patient.firstName }}</td>
                </tr>
                <tr>
                    <th>{{ 'patient.middlename'|trans }}</th>
                    <td>{{ patient.middleName }}</td>
                </tr>
                <tr>
                    <th>{{ 'patient.lastname'|trans }}</th>
                    <td>{{ patient.lastName }}</td>
                </tr>
                <tr>
                    <th>{{ 'patient.gender'|trans }}</th>
                    <td>{{ patient.gender }}</td>
                </tr>
                <tr>
                    <th>{{ 'patient.date-of-birth'|trans }}</th>
                    <td>{{ patient.dateOfBirth ? patient.dateOfBirth|date('Y-m-d') : ''  }}</td>
                </tr>
                <tr>
                    <th>{{ 'common.created'|trans }}</th>
                    <td>{{ patient.createdAt ? patient.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
                </tr>
                <tr>
                    <th>{{ 'common.updated'|trans }}</th>
                    <td>{{ patient.updatedAt ? patient.updatedAt|date('Y-m-d H:i:s T') : '' }}</td>
                </tr>

                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <div class="d-flex flex-column">
                <div class="p-2">
                    <a href="{{ path('admin_patient_index') }}" class="btn btn-info btn-block" role="button">{{ 'common.actions.back_to_list'|trans }}</a>
                </div>
                {#<div class="p-2">#}
                    {#{% if user.isActiveAccount %}#}
                        {#{{ include('admin/user/_disable_account_form.html.twig') }}#}
                    {#{% else %}#}
                        {#{{ include('admin/user/_enable_account_form.html.twig') }}#}
                    {#{% endif %}#}
                {#</div>#}
                <div class="p-2">
                    <a href="{{ path('admin_patient_edit', {'id': patient.id}) }}" class="btn btn-primary btn-block" role="button">{{ 'common.actions.edit'|trans }}</a>
                </div>
                <div class="p-2">
                    {{ include('admin/patient/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
