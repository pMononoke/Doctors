        <title>{% block title %} {{ 'application.name'|trans }} {% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <!-- Navbar -->
        {{ include('admin/layout/partials/_navbar.html.twig') }}

        <!-- end #menu -->
        <div class="container-fluid">
            {{ include('admin/layout/partials/_flash_messages.html.twig') }}
